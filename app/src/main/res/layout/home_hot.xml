<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/hot_tv"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/灰色"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_width="130dp"
        android:layout_height="165dp"
        app:layout_constraintTop_toBottomOf="@id/hot_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/hot_url"/>
    <TextView
        android:layout_marginTop="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hot_name"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/hot_tv"
        app:layout_constraintLeft_toRightOf="@id/hot_url"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hot_brief"
        android:textSize="14dp"
        android:textColor="#33000000"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/hot_name"
        app:layout_constraintLeft_toLeftOf="@id/hot_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hot_price"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/hot_brief"
        app:layout_constraintLeft_toLeftOf="@id/hot_brief"
        android:layout_marginTop="10dp"
        android:textColor="@color/红色"/>
</androidx.constraintlayout.widget.ConstraintLayout>