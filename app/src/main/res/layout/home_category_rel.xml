<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/rel_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rel_name"
        app:layout_constraintTop_toBottomOf="@id/rel_img"
        app:layout_constraintRight_toRightOf="@id/rel_img"
        app:layout_constraintLeft_toLeftOf="@id/rel_img"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rel_price"
        android:textColor="@color/红色"
        app:layout_constraintTop_toBottomOf="@id/rel_name"
        app:layout_constraintRight_toRightOf="@id/rel_name"
        app:layout_constraintLeft_toLeftOf="@id/rel_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>